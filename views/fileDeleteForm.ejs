<!DOCTYPE html>
<html>
  <% if (currentUser) { %>
    <head>
      <title>Delete file</title>
      <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
      <%- include('navbar') %>
      <h1>Delete file</h1>
      <%= file.name %>
      <p>Size: <%= file.size_mb %> mb</p>
      <form id="deleteFile" action="/uploads/file/<%= file.id %>/delete" method="post">
          <button type="submit" class="deleteFileBtn">Delete File</button>
      </form>
      <a href="/uploads/file/<%= file.id %>" class="cancel">Cancel</a>
    </body>
  <% } else { %>
    <%- include('pageNotFound') %>
  <% } %>
</html>