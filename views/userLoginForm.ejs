<!DOCTYPE html>
<html>
  <head>
    <title>Log in</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/userLoginForm.css' />
  </head>
  <body>
    <%- include('navbar') %>
    <div class="userLoginForm">
      <h1 class="loginTitle">Log in</h1>
      <form id="login" action="/uploads/user/login" method="post">
        <div class="formInputsDiv">
          <label class="loginLabel" for="username">Username</label>
          <input id="username" name="username" type="text" class="loginInput" required autocomplete>
          <label class="loginLabel" for="password">Password</label>
          <input id="password" name="password" type="password" class="loginInput" required autocomplete>
        </div>
        <button type="submit" class="loginBtn">Log in</button>
        <p class="message"><%= message %></p>
      </form>
      <a href="/uploads/" class="cancelBtn">Cancel</a>
    </div>
  </body>
</html>